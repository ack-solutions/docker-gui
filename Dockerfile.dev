FROM node:22-bookworm-slim AS dev

# Install build dependencies (matches production base for parity)
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    pkg-config \
    libcairo2-dev \
    libjpeg62-turbo-dev \
    libpango1.0-dev \
    libgif-dev \
    libsqlite3-dev \
    git \
    dumb-init \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy dependency manifests and install once during build for caching
COPY package.json yarn.lock ./
RUN yarn install --frozen-lockfile

# Copy helper scripts
COPY scripts/docker-dev-entrypoint.sh /usr/local/bin/docker-dev-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-dev-entrypoint.sh

ENV NODE_ENV=development
ENV PATH="/app/node_modules/.bin:${PATH}"

ENTRYPOINT ["dumb-init", "--", "/usr/local/bin/docker-dev-entrypoint.sh"]
CMD ["yarn", "dev"]
